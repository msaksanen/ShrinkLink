@model UserDataModel?

@{
    Layout = null;
}
@if (Model == null)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Login</a>
        <ul class="dropdown-menu" style="min-width: fit-content">
            <li><a class="dropdown-item" asp-action="Login" asp-controller="Account">Login</a></li>
            <li><a class="dropdown-item" asp-action="Register" asp-controller="Account">Register</a></li>
        </ul>
    </li>
}

else
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" id="loggedIn">Hello @Model.FullName! (@Model.Email)</a>
        <ul class="dropdown-menu" style="min-width: fit-content">
            <li><a class="dropdown-item" asp-action="URLManage" asp-controller="UserPanel">My Short URLs</a></li>
            <li><a class="dropdown-item" asp-action="AccSettings" asp-controller="UserPanel">My Settings</a></li>
        </ul>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
    </li>
}
